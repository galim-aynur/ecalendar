<%= form_with model: @event, local: true do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :start_time %><br>
    <%= form.datetime_select :start_time, order: [:day, :month, :year] %>
  </p>

  <p>
    <%= form.label :recurring %><br>
    <%= form.select_recurring :recurring, nil, allow_blank: true %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
