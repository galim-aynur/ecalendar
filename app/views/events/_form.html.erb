<%= form_with model: @event, local: true do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.date_select :start_time, {order: [:day, :month, :year]}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :recurring %>
    <%= form.select_recurring :recurring, nil, options = {allow_blank: true}, html_options = {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
